---
import Card from "../components/card.astro";
import Chip from "../components/chip.astro";

// Put all your links here
const links: Link[] = [
  {
    desc: "Exemplo",
    link: "example.com",
    icon: "fa-solid fa-home",
  },
  {
    desc: "Teste",
    link: "example.com",
    icon: "fa-solid fa-store",
  },
];
---

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <link rel='icon' type='image/x-icon' href='/favicon.png' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link
      rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css'
      integrity='sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=='
      crossorigin='anonymous'
      referrerpolicy='no-referrer'
    />
    <meta name='generator' content={Astro.generator} />
    <meta name='description' content='Useful links of Neville Brem' />
    <meta name='author' content='Neville Brem' />
    <meta property='og:title' content='Neville Brem' />
    <meta property='og:image' content='favicon.png' />
    <meta property='og:description' content='Linktree of Neville Brem' />
    <meta property='twitter:description' content='Linktree of Neville Brem' />
    <meta property='twitter:title' content='Neville Brem' />
    <meta property='twitter:image' content='favicon.png' />
    <meta name='twitter:card' content='summary' />
    <meta name='twitter:site' content='@BremNeville' />
    <title>Links of Neville Brem</title>
    <style>
      @font-face {
        font-family: Geist;
        src: url(/Geist.ttf);
        font-display: swap;
      }

      body {
        background: linear-gradient(135deg, #1e3a8a, #9333ea);
      }

      .container {
        display: flex;
        flex-direction: column;
        gap: 16px;
      }

      .content {
        order: 1;
      }

      .typebot {
        order: 2;
        width: 100%;
        height: 600px;
      }

      @media (min-width: 768px) {
        .container {
          flex-direction: row;
          justify-content: space-between;
          align-items: flex-start;
        }

        .content {
          width: 60%;
        }

        .typebot {
          width: 35%;
          height: 600px;
        }
      }
    </style>
  </head>
  <body
    class='flex justify-center items-center w-screen h-screen font-[Geist] text-white'
  >
    <main class="container w-[80%]">
      <!-- Conteúdo principal -->
      <div class="content">
        <h1 class='md:text-6xl text-4xl font-black text-center'>Governe</h1>
        <div class='grid justify-center gap-4'>
          {
            links.map(({ desc, link, icon }) => {
              return <Card {desc} {link} {icon} />;
            })
          }
        </div>
        <div class='flex justify-center gap-8'>
          <Chip link='youtube.com/' icon='fa-brands fa-youtube' />
          <Chip link='github.com/' icon='fa-brands fa-github' />
          <Chip link='x.com/' icon='fa-brands fa-x-twitter' />
        </div>
        <p class='text-center mx-auto'>Site em construção</p>
      </div>

      <!-- Typebot -->
      <typebot-standard class="typebot"></typebot-standard>
    </main>

    <!-- Script Typebot -->
    <script type="module">
      import Typebot from 'https://cdn.jsdelivr.net/npm/@typebot.io/js@0.3.4/dist/web.js';
      Typebot.initStandard({ typebot: "governe", apiHost: "https://bot.cd2.io" });
    </script>
  </body>
</html>
