---
import Card from "../components/card.astro";
import Chip from "../components/chip.astro";

// Put all your links here
const links: Link[] = [
  {
    desc: "Fale Conosco pelo WhatsApp",
    link: "wa.me/5573999719266?text=Olá%2C%20Leal%20Fidelzações!%20%F0%9F%98%83",
    icon: "fa-brands fa-whatsapp",
  },
  // {
  //   desc: "Cool Project",
  //   link: "example.com",
  //   icon: "fa-solid fa-store",
  // },
];
---

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <link rel='icon' type='image/x-icon' href='/favicon.png' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link
      rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css'
      integrity='sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=='
      crossorigin='anonymous'
      referrerpolicy='no-referrer'
    />
    <meta name='generator' content={Astro.generator} />
    <meta name='description' content='Useful links of Neville Brem' />
    <meta name='author' content='Neville Brem' />
    <meta property='og:title' content='Neville Brem' />
    <meta property='og:image' content='favicon.png' />
    <meta property='og:description' content='Linktree of Neville Brem' />
    <meta property='twitter:description' content='Linktree of Neville Brem' />
    <meta property='twitter:title' content='Neville Brem' />
    <meta property='twitter:image' content='favicon.png' />
    <meta name='twitter:card' content='summary' />
    <meta name='twitter:site' content='@BremNeville' />
    <title>Leal Fidelizações</title>
    <style>
      @font-face {
        font-family: Geist;
        src: url(/Geist.ttf);
        font-display: swap;
      }

      body {
        background: linear-gradient(135deg, #fb4c19, #ffffff);
      }

      .container {
        display: flex;
        flex-direction: column;
        gap: 16px;
      }

      .typebot {
        width: 100%;
        height: 600px;
      }

      /* Ajuste para dispositivos móveis */
      @media (max-width: 768px) {
        .container {
          flex-direction: column;
        }

        .typebot {
          margin-top: 16px;
        }
      }
    </style>
  </head>
  <body
    class='flex justify-center items-center w-screen h-screen font-[Geist] text-white'
  >
    <main class="container w-[80%]">
      <!-- Conteúdo principal -->
      <div class="flex items-center gap-8 mb-8">
        <!-- Espaço para o logo -->
        <div class="w-32 h-32 bg-white/10 rounded-full flex items-center justify-center">
          <img src="/leal.jpeg" alt="Logo Leal Fidelizações" class="w-24 h-24 object-contain" />
        </div>
        
        <div class="flex-1">
          <h1 class='md:text-6xl text-4xl font-black'>Leal Fidelizações</h1>
          <h2 class='text-xl mt-2'>Digite seu celular para conferir seu cashback</h2>
        </div>
      </div>

      <div class='grid justify-center gap-4 mb-8'>
        {
          links.map(({ desc, link, icon }) => {
            return <Card {desc} {link} {icon} />;
          })
        }
      </div>

      <div class='flex justify-center gap-8'>
        <Chip link='instagram.com/lealfidelizacoes/' icon='fa-brands fa-instagram' />
      </div>

      <!-- Typebot -->
      <typebot-standard class="typebot"></typebot-standard>
    </main>

    <!-- Script Typebot -->
    <script type="module">
      import Typebot from 'https://cdn.jsdelivr.net/npm/@typebot.io/js@0.3.4/dist/web.js';
      Typebot.initStandard({ typebot: "leal", apiHost: "https://bot.cd2.io" });
    </script>
  </body>
</html>
